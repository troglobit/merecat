[Unit]
Description=Merecat web server
Documentation=man:merecat(8) man:ssi(8) man:redirect(8) man:htpasswd(1)
Documentation=file:@DOCDIR@/README.md
Documentation=http://github.com/troglobit/merecat
Documentation=http://merecat.troglobit.com
ConditionPathExists=/var/www
After=network-online.target
Requires=network-online.target

[Service]
Type=simple
Restart=always
RestartSec=3
ExecStart=@SBINDIR@/merecat -n @WWWDIR@

[Install]
WantedBy=multi-user.target
